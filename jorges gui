ttk.Label(root, text='Ultimate Decision', background='red').place(x=555, y=260, width=530, height=375)


# Create a photoimage object of the image in the path
image1 = Image.open("wind.jpg")
test = ImageTk.PhotoImage(image1)
label1 = tkinter.Label(image=test)
label1.image = test
# Position image
label1.place(x=15, y=50)

