import tkinter
from tkinter import *
from tkinter import ttk
from PIL import Image, ImageTk
#import webbrowser
import requests


root = Tk()
root.geometry('1100x650+200+200')

ttk.Label(root, text=' ', background='black').place(x=0, y=0, width=1100, height=650)
ttk.Label(root, text='Airogistic GUI', background='orange').place(x=15, y=10, width=80, height=20)

ttk.Label(root, text=' ', background='white').place(x=15, y=50, width=260, height=200)
ttk.Label(root, text='Approvals', background='white').place(x=285, y=50, width=260, height=200)
